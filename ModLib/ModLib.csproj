<Project Sdk="Microsoft.NET.Sdk">

	<!-- Assembly metadata -->
	<PropertyGroup>
		<Title>Generic Modding Library</Title>
		<AssemblyVersion>1.0.1.2</AssemblyVersion>
		<FileVersion>1.0.1.2</FileVersion>
	</PropertyGroup>

	<!-- .NET options -->
    <PropertyGroup>
		<TargetFramework>net481</TargetFramework>
		<LangVersion>latest</LangVersion>
		<Nullable>enable</Nullable>
	</PropertyGroup>

	<!-- Compiler settings -->
	<PropertyGroup>
		<AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
		<GenerateDocumentationFile>true</GenerateDocumentationFile>
	</PropertyGroup>

	<!-- Referenced assemblies -->
	<ItemGroup>
		<Reference Include="../lib/*.dll">
			<Private>false</Private>
		</Reference>
		<Reference Include="../lib/**/*.dll">
			<Private>false</Private>
		</Reference>
	</ItemGroup>

	<!-- Embedded resources -->
	<ItemGroup>
		<EmbeddedResource Include="../$(TargetName).Loader/patchers/$(TargetName).Loader.dll"/>
	</ItemGroup>

	<!-- Post-compile tasks -->
	<Target Name="GenerateModLibrary" AfterTargets="PostBuildEvent">
		<ItemGroup>
			<CopyPlugins Include="$(TargetDir)$(TargetName).dll" />
			<CopyPlugins Include="$(TargetDir)$(TargetName).pdb" />
		</ItemGroup>

		<Copy SourceFiles="@(CopyPlugins)" DestinationFolder="../mod/newest/plugins/" />

		<Copy SourceFiles="../lib/LogUtils.dll" DestinationFolder="../mod/newest/plugins/" />
		<Copy SourceFiles="../lib/LogUtils.pdb" DestinationFolder="../mod/newest/plugins/" />
	</Target>

</Project>