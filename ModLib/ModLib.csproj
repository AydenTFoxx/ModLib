<Project Sdk="Microsoft.NET.Sdk">

	<!-- Assembly metadata -->
	<PropertyGroup>
		<Title>Generic Modding Library</Title>
		<AssemblyVersion>0.2.2.4</AssemblyVersion>
		<FileVersion>0.2.2.4</FileVersion>
	</PropertyGroup>

	<!-- .NET options -->
    <PropertyGroup>
		<TargetFramework>net481</TargetFramework>
		<LangVersion>latest</LangVersion>
		<Nullable>enable</Nullable>
	</PropertyGroup>

	<!-- Compiler settings -->
	<PropertyGroup>
		<AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
		<GenerateDocumentationFile>true</GenerateDocumentationFile>
	</PropertyGroup>

	<!-- Determinism config -->
	<PropertyGroup>
		<Deterministic>true</Deterministic>
    	<DeterministicSourcePaths>true</DeterministicSourcePaths>
	</PropertyGroup>

	<ItemGroup>
    	<SourceRoot Include="$(MSBuildThisFileDirectory)/"/>
	</ItemGroup>

	<!-- Referenced assemblies -->
	<ItemGroup>
		<Reference Include="../lib/Rain World/**/*.dll">
			<Private>false</Private>
		</Reference>
		<Reference Include="../lib/Mods/*.dll">
			<Private>false</Private>
		</Reference>
	</ItemGroup>

	<!-- Embedded resources -->
	<ItemGroup>
		<EmbeddedResource Include="../$(TargetName).Loader/patchers/$(TargetName).Loader.dll" LogicalName="$(TargetName).Loader.dll" />
	</ItemGroup>

	<!-- Post-compile tasks -->
	<Target Name="GenerateModLibrary" AfterTargets="PostBuildEvent">
		<ItemGroup>
			<CopyPlugins Include="$(TargetDir)$(TargetName).dll" />
			<CopyPlugins Include="$(TargetDir)$(TargetName).pdb" />

			<CopyPlugins Include="../lib/Mods/LogUtils.dll" />
			<CopyPlugins Include="../lib/Mods/LogUtils.pdb" />

			<CopyDocs Include="$(TargetDir)$(TargetName).dll" />
			<CopyDocs Include="$(TargetDir)$(TargetName).xml" />
		</ItemGroup>

		<Copy SourceFiles="@(CopyDocs)" DestinationFolder="../lib/Custom/" />

		<Copy SourceFiles="@(CopyPlugins)" DestinationFolder="../mod/newest/plugins/" />
	</Target>

</Project>