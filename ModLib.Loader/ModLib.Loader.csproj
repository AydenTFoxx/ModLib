<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<Title>Generic Modding Library Loader</Title>
		<AssemblyVersion>0.2.0.0</AssemblyVersion>
		<FileVersion>0.2.0.0</FileVersion>
	</PropertyGroup>

    <PropertyGroup>
		<TargetFramework>net481</TargetFramework>
		<LangVersion>latest</LangVersion>
		<Nullable>enable</Nullable>
		<AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
	</PropertyGroup>

    <ItemGroup>
      <ProjectReference Include="..\ModLib\ModLib.csproj" />
    </ItemGroup>

	<ItemGroup>
		<Reference Include="../lib/Rain World/BepInEx/core/BepInEx.dll">
			<Private>false</Private>
		</Reference>
		<Reference Include="../lib/Rain World/BepInEx/patchers/BepInEx.MultiFolderLoader.dll">
			<Private>false</Private>
		</Reference>
		<Reference Include="../lib/Rain World/RainWorld_Data/Managed/Mono.Cecil.dll">
			<Private>false</Private>
		</Reference>
	</ItemGroup>

	<Target Name="GenerateModLibPatcher" AfterTargets="PostBuildEvent">
		<ItemGroup>
			<CopyPlugins Include="$(TargetDir)$(TargetName).dll" />
		</ItemGroup>

		<Copy SourceFiles="@(CopyPlugins)" DestinationFolder="./patchers/" />
	</Target>

</Project>